{
  "name": "@discourse/lint-configs",
  "version": "2.34.0",
  "description": "Shareable lint configs for Discourse core, plugins, and themes",
  "author": "Discourse",
  "license": "MIT",
  "keywords": [
    "discourse"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/discourse/lint-configs.git"
  },
  "homepage": "https://github.com/discourse/lint-configs#readme",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "type": "module",
  "exports": {
    "./eslint": "./eslint.mjs",
    "./eslint-theme": "./eslint-theme.mjs",
    "./prettier": {
      "require": "./.prettierrc.cjs"
    },
    "./stylelint": "./stylelint.mjs",
    "./template-lint": {
      "require": "./template-lint.config.cjs"
    },
    "./template-lint-rules": "./template-lint-rules/index.mjs"
  },
  "scripts": {
    "lint": "eslint --no-error-on-unmatched-pattern \"**/*.{cjs,mjs,js}\" && pnpm prettier --check \"**/*.{cjs,mjs,js}\"",
    "test": "cd ../test && node test.js"
  },
  "dependencies": {
    "@babel/core": "^7.28.4",
    "@babel/eslint-parser": "^7.28.0",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "ember-template-lint": "^7.9.3",
    "eslint": "^9.36.0",
    "eslint-plugin-decorator-position": "^6.0.0",
    "eslint-plugin-ember": "^12.7.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-qunit": "^8.2.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-class-members": "^1.21.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-ember-template-tag": "^2.1.0",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-scss": "^6.12.1",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "ember-template-lint": "7.9.3",
    "eslint": "9.36.0",
    "prettier": "3.6.2",
    "stylelint": "16.24.0"
  }
}
